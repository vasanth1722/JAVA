pipeline {
    agent any

    environment {
        // Example environment variable
        APP_NAME = "MyApp"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
                echo "Checked out branch: ${env.BRANCH_NAME}"
            }
        }

        stage('Build') {
            steps {
                script {
                    if (env.BRANCH_NAME == 'main') {
                        echo 'Building for production...'
                        // Add your production build steps
                    } else if (env.BRANCH_NAME == 'develop') {
                        echo 'Building for development...'
                        // Add your development build steps
                    } else {
                        echo "Building for feature branch: ${env.BRANCH_NAME}"
                        // Add your feature branch build steps
                    }
                }
            }
        }

        stage('Test') {
            steps {
                echo "Running tests..."
                // Add test steps here
            }
        }

        stage('Deploy') {
            when {
                branch 'main'
            }
            steps {
                echo "Deploying to production..."
                // Add production deploy steps
            }
        }
    }

    post {
        always {
            echo "Pipeline finished for branch: ${env.BRANCH_NAME}"
        }
        failure {
            echo "Pipeline failed for branch: ${env.BRANCH_NAME}"
        }
    }
}

